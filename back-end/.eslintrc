{
  "root": true,
  "extends": "airbnb-base",
  "env": {
    "browser": false,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
      }
    },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-console": "off"
  },
  "extends": "eslint:recommended"
}
